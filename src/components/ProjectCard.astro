---
const { title, description, tags, link, year, gradient } = Astro.props;

const gradients = [
  'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
  'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)',
  'linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)',
  'linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)',
  'linear-gradient(135deg, #fa709a 0%, #fee140 100%)',
  'linear-gradient(135deg, #a8edea 0%, #fed6e3 100%)',
];

const bgGradient = gradient || gradients[Math.floor(Math.random() * gradients.length)];
---

<article class="project-card">
  <div class="card-image" style={`background: ${bgGradient};`}>
    <div class="card-image-overlay"></div>
  </div>
  <div class="card-content">
    <span class="year">{year}</span>
    <h3 class="title">
      <a href={link} target="_blank" rel="noopener noreferrer">
        {title}
        <svg class="external-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
          <polyline points="15 3 21 3 21 9"/>
          <line x1="10" y1="14" x2="21" y2="3"/>
        </svg>
      </a>
    </h3>
    <p class="description">{description}</p>
    <div class="tags">
      {tags.map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  </div>
  <div class="card-glow"></div>
</article>

<style>
  .project-card {
    position: relative;
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover {
    transform: translateY(-4px);
    border-color: var(--border-accent);
    box-shadow: 0 20px 40px -20px rgba(99, 102, 241, 0.2);
  }

  .card-image {
    height: 160px;
    position: relative;
    overflow: hidden;
  }

  .card-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom, transparent 50%, var(--bg-secondary) 100%);
  }

  .card-content {
    padding: 2rem;
    padding-top: 0;
    margin-top: -2rem;
    position: relative;
  }

  .card-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--accent-gradient);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .card-glow {
    opacity: 1;
  }

  .year {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--accent-primary);
    background: rgba(99, 102, 241, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .title {
    font-size: 1.35rem;
    margin-bottom: 0.75rem;
  }

  .title a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s ease;
  }

  .title a:hover {
    color: var(--accent-primary);
  }

  .external-icon {
    opacity: 0;
    transform: translate(-4px, -4px);
    transition: all 0.2s ease;
  }

  .title a:hover .external-icon {
    opacity: 1;
    transform: translate(0, 0);
  }

  .description {
    color: var(--text-secondary);
    font-size: 0.95rem;
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--text-muted);
    background: var(--bg-tertiary);
    padding: 0.35rem 0.75rem;
    border-radius: 6px;
    border: 1px solid var(--border-subtle);
  }
</style>
